#include<iostream>
using namespace std;
int main(){
    int my_first_variable, my_second_variable;
    int my_sum, my_difference, my_product;

    cin >> my_first_variable >> my_second_variable;
    my_sum = my_first_variable + my_second_variable;
    my_difference = my_first_variable - my_second_variable;
    my_product = my_first_variable * my_second_variable;

    cout << "The sum of the two variables: " << my_sum << endl;
    cout << "The difference of the two variables: " << my_difference << endl;
    cout << "The product of the two variables: " << my_product << endl;

    return 0;}

